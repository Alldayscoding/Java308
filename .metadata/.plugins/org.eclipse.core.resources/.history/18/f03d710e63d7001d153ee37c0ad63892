
//1+(-2) + 3 + (-4) + ...... 이런식으로 더해락때 몇까지 더해야 총합이 100이상이 될까
package exam01;

public class Exam07 {

	public static void main(String[] args) {
		
		int sum = 0;
		
		for (int i = 1; i<100 ; i++) {
			sum = sum + (i + (-(i+1)));
			System.out.println("sum : " + sum);
			if (sum > 100) 
				break;
		}
		
	}

}
