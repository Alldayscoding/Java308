package exam;

/*
 * +   1
 * ++  12
 * +++ 123
 * ++++ 1234
 * +++++ 12345
 */
public class Exam03 {

	public static void main(String[] args) {
		System.out.printf("자리수 지정 :%4d%n",1);
		for(int i=0; i<5 ; i++) {
			
			
			for(int j=0; j<i+1 ; j++) {
				char str = '+';
				System.out.print(str);  //System.out.printf("자리수 지정 :%4d%n",1);
			}
			System.out.print("\n");
		}
	}
}
