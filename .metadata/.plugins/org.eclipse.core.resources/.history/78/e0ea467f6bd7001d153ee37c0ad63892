package exam01;

import java.util.Scanner;

/*
 * for문은 무한 반복...처리해준다.
 * 
 */
public class Exam08 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		int deposit = 0;
		int withDraw = 0;
		int curnt = 0;

		for(; ;) {
			System.out.println("-----------------------------");
			System.out.println("1.예금 | 2.출금 | 3.잔고 | 4.종료");
			System.out.println("-----------------------------");		
			System.out.print("선택>");
			int choice = sc.nextInt();

			switch (choice) {

			case 1 :
				System.out.print("예금액>");
				deposit = sc.nextInt() + deposit;
				break;

			case 2 :
				System.out.print("출금액>");
				withDraw = sc.nextInt();
				deposit =- withDraw;

			case 3 :
				System.out.print("잔고>" + deposit);
				
			default :
			}

		}

	}
}
